# Makefile  Project

.PHONY: help
.DEFAULT_GOAL := help


#------------------------------------------------------------------------------------------------

help:
	@grep -E '^[a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | awk 'BEGIN {FS = ":.*?## "}; {printf "\033[36m%-30s\033[0m %s\n", $$1, $$2}'

#------------------------------------------------------------------------------------------------

status: ## Status command
	cd ../.. && php bin/phpunuhi status --configuration=./tests/playground/phpunuhi.xml

validate: ## Validate command
	cd ../.. && php bin/phpunuhi validate --configuration=./tests/playground/phpunuhi.xml

structure: ## Fix command
	cd ../.. && php bin/phpunuhi fix:structure --configuration=./tests/playground/phpunuhi.xml

translate: ## Translate command
	cd ../.. && php bin/phpunuhi translate --configuration=./tests/playground/phpunuhi.xml --service=googleweb

export: ## Export command
	cd ../.. && php bin/phpunuhi export --configuration=./tests/playground/phpunuhi.xml --dir=./tests/playground/.exports

html: ## Export command with HTML
	cd ../.. && php bin/phpunuhi export --configuration=./tests/playground/phpunuhi.xml --set=json --dir=./tests/playground/.exports --format=html

import: ## Import command
	cd ../.. && php bin/phpunuhi import --configuration=./tests/playground/phpunuhi.xml --set=json --file=./tests/playground/.exports/json.csv
